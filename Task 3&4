                                         // indexof & lastindexof
        
            let text = 'Hello World'
            let substr = 'o'
            let indexof = text.indexOf(substr);
            let indexofWithPos = text.indexOf(substr, 2);
            console.log(indexof, indexofWithPos);                        //Indexof

            let lastIndexof = text.lastIndexOf(substr);
            let lastIndexofWithPos = text.lastIndexOf(substr, 2);
            console.log(lastIndexof, lastIndexofWithPos)                  //last indexof




