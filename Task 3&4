                                        //jack and jill with upper and lower case

            let char = "jack and jill went up the hill"; 
            char = char.toLowerCase();
            let data = '';
            for(let i = 0; i < char.length; i++){ 
             data += char.charAt(i);
                if(i==0 || i==5 || i==9 || i==14 || i==19 || i==22 || i==26 ){
                    data += char.charAt(i).toUpperCase();
                }
                
                //  console.log(data);
