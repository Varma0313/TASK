        <script>
        
                         //Task Hello World sort


        let arr = ['H','e','l','l','o', 'W','o','r','l','d'];               //array with index
        console.log(arr.sort());
        console.log(arr.reverse());

        let arr1 = 'Hello World'.split('');                                 //string
        console.log(arr1.sort());
        console.log(arr1.reverse());

        let arr2 = ['helloworld'];                                           //array-->string
        console.log(arr2[0].split('').sort());
        console.log(arr2[0].split('').sort().join());


    </script>
